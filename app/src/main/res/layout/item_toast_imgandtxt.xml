<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_container"
    android:background="@drawable/bg_translate_r30"
    >
    <ImageView
        android:layout_width="@dimen/x74"
        android:layout_height="@dimen/y74"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:src="@drawable/succeed_icon"
        />
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y42"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y129"
        android:textColor="#ffffff"
        android:textSize="@dimen/y30"
        android:text="打卡成功"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginBottom="@dimen/y39"
        />
</RelativeLayout>